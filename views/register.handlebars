  <div class="nav-wrapper">
    <a href="#!" class="brand-logo">Book Crawler</a>
    <a href="/" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">Login</i></a>
    <ul class="right hide-on-med-and-down">
      <li><a href="/">Login</a></li>
    </ul>
