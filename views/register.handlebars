<div class="main-container">
  <div class="loginDiv">
    
    <h3>Registration Form</h3>
    <h6>Create an Account Here!</h6>

      <div class="row">
            {{#each errors}}
              <p id="errMsg">{{ msg }}</p>
            {{/each}}
      
            <form  class="col s12" action="/register" method="POST">
              <div class="row">
                <div class="input-field col s6">
                  <input type="text" name="name" id="userName" class="validate" placeholder="Enter Username">
                  <label class="active" for="userName">User Name</label>
                </div>
              </div>

              <div class="row">
                <div class="input-field col s6">
                    <input type="password" name="password" id="password" class="validate" placeholder= "Create Password">
                  <label class="active" for="password">Password</label>
                </div>
              </div>

              <div class="row">
                <div class="input-field col s6">
                    <input type="password" name="password2" id="password2" class="validate" placeholder= "Confirm Password">
                  <label class="active" for="password">Re-enter Password</label>
                </div>
              </div>

              <div class="row">
                <div id="submit" class="input-field col s2">
                  <button type="submit">Register</button>
                </div>
              </div>
            </form>
      </div>

  </div>
</div>